{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "es6",
        "target": "es2019",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noEmit": true,
        "baseUrl": "src",
        "paths": {
            "@utils": ["utils/index.ts"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
